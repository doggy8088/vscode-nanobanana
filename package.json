{
  "name": "vscode-image-generator",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.1.0",
  "publisher": "doggy8088",
  "icon": "icon.png",
  "repository": "https://github.com/doggy8088/vscode-image-generator",
  "engines": {
    "vscode": "^1.108.0"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#DAD0C2",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [
    "onCommand:nanoBanana.generateFromSelection",
    "onCommand:nanoBanana.generateFreeform",
    "onCommand:nanoBanana.setGeminiApiKey"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nanoBanana.generateFromSelection",
        "title": "%command.generateFromSelection.title%"
      },
      {
        "command": "nanoBanana.generateFreeform",
        "title": "%command.generateFreeform.title%"
      },
      {
        "command": "nanoBanana.setGeminiApiKey",
        "title": "%command.setGeminiApiKey.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nanoBanana.generateFromSelection",
          "when": "editorTextFocus",
          "group": "navigation@100"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "%config.title%",
      "properties": {
        "nanoBanana.modelId": {
          "type": "string",
          "default": "gpt-3-pro-image-preview",
          "description": "%config.modelId.description%"
        },
        "nanoBanana.geminiApiBaseUrl": {
          "type": "string",
          "default": "https://generativelanguage.googleapis.com/v1beta",
          "description": "%config.geminiApiBaseUrl.description%"
        },
        "nanoBanana.copilotPromptModel": {
          "type": "string",
          "default": "gpt-4.1",
          "description": "%config.copilotPromptModel.description%"
        },
        "nanoBanana.imageOutputFormat": {
          "type": "string",
          "enum": [
            "png"
          ],
          "default": "png",
          "description": "%config.imageOutputFormat.description%"
        },
        "nanoBanana.defaultStyle": {
          "type": "string",
          "default": "article-cover",
          "description": "%config.defaultStyle.description%"
        },
        "nanoBanana.rememberLastStyle": {
          "type": "boolean",
          "default": true,
          "description": "%config.rememberLastStyle.description%"
        },
        "nanoBanana.defaultAspectRatio": {
          "type": "string",
          "enum": [
            "1:1",
            "2:3",
            "3:2",
            "3:4",
            "4:3",
            "4:5",
            "5:4",
            "9:16",
            "16:9",
            "21:9"
          ],
          "default": "1:1",
          "description": "%config.defaultAspectRatio.description%"
        },
        "nanoBanana.rememberLastAspectRatio": {
          "type": "boolean",
          "default": true,
          "description": "%config.rememberLastAspectRatio.description%"
        },
        "nanoBanana.displayLanguage": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "zh-TW",
            "zh-CN",
            "ja",
            "ko",
            "th",
            "vi"
          ],
          "enumDescriptions": [
            "%config.displayLanguage.auto%",
            "%config.displayLanguage.en%",
            "%config.displayLanguage.zhTW%",
            "%config.displayLanguage.zhCN%",
            "%config.displayLanguage.ja%",
            "%config.displayLanguage.ko%",
            "%config.displayLanguage.th%",
            "%config.displayLanguage.vi%"
          ],
          "default": "auto",
          "description": "%config.displayLanguage.description%"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "vscode:prepublish": "npm run build",
    "watch": "node esbuild.js --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "package:vsix": "npx @vscode/vsce package",
    "publish:vscode": "pwsh -File scripts/publish-vscode.ps1"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.108.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
