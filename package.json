{
  "name": "vscode-image-generator",
  "displayName": "Nano Banana Pro Image Generator",
  "description": "Generate images in VS Code using Gemini API, with article-cover prompt generation via GitHub Copilot Language Model API.",
  "version": "0.1.0",
  "publisher": "doggy8088",
  "icon": "icon.png",
  "repository": "https://github.com/doggy8088/vscode-image-generator",
  "engines": {
    "vscode": "^1.108.0"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#DAD0C2",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:nanoBanana.generateFromSelection",
    "onCommand:nanoBanana.generateFreeform",
    "onCommand:nanoBanana.setGeminiApiKey"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nanoBanana.generateFromSelection",
        "title": "使用 Nano Banana Pro 生圖"
      },
      {
        "command": "nanoBanana.generateFreeform",
        "title": "Nano Banana: 任意生圖"
      },
      {
        "command": "nanoBanana.setGeminiApiKey",
        "title": "Nano Banana: 設定 Gemini API Key"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nanoBanana.generateFromSelection",
          "when": "editorTextFocus",
          "group": "navigation@100"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Nano Banana",
      "properties": {
        "nanoBanana.modelId": {
          "type": "string",
          "default": "gemini-3-pro-image-preview",
          "description": "Gemini image model ID. Supports legacy alias gpt-3-pro-image-preview."
        },
        "nanoBanana.geminiApiBaseUrl": {
          "type": "string",
          "default": "https://generativelanguage.googleapis.com/v1beta",
          "description": "Gemini API base URL."
        },
        "nanoBanana.copilotPromptModel": {
          "type": "string",
          "default": "gpt-4.1",
          "description": "Preferred Copilot model id/family for prompt generation."
        },
        "nanoBanana.imageOutputFormat": {
          "type": "string",
          "enum": [
            "png"
          ],
          "default": "png",
          "description": "Output image format for saved files."
        },
        "nanoBanana.defaultStyle": {
          "type": "string",
          "default": "article-cover",
          "description": "Default image style preset id."
        },
        "nanoBanana.rememberLastStyle": {
          "type": "boolean",
          "default": true,
          "description": "Remember last selected style in workspace."
        },
        "nanoBanana.defaultAspectRatio": {
          "type": "string",
          "enum": [
            "1:1",
            "2:3",
            "3:2",
            "3:4",
            "4:3",
            "4:5",
            "5:4",
            "9:16",
            "16:9",
            "21:9"
          ],
          "default": "1:1",
          "description": "Default aspect ratio for image generation."
        },
        "nanoBanana.rememberLastAspectRatio": {
          "type": "boolean",
          "default": true,
          "description": "Remember last selected aspect ratio in workspace."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
