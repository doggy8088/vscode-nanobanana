{
  "name": "nano-banana",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.1.0",
  "publisher": "doggy8088",
  "icon": "icon.png",
  "repository": "https://github.com/doggy8088/vscode-nano-banana",
  "engines": {
    "vscode": "^1.108.0"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#DAD0C2",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [
    "onCommand:nanoBanana.generateFromSelection",
    "onCommand:nanoBanana.setGeminiApiKey",
    "onCommand:nanoBanana.selectCopilotPromptModel",
    "onCommand:nanoBanana.editImageWithReference",
    "onCommand:nanoBanana.openImageEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nanoBanana.generateFromSelection",
        "title": "%command.generateFromSelection.title%"
      },
      {
        "command": "nanoBanana.setGeminiApiKey",
        "title": "%command.setGeminiApiKey.title%"
      },
      {
        "command": "nanoBanana.selectCopilotPromptModel",
        "title": "%command.selectCopilotPromptModel.title%"
      },
      {
        "command": "nanoBanana.editImageWithReference",
        "title": "%command.editImageWithReference.title%"
      },
      {
        "command": "nanoBanana.openImageEditor",
        "title": "%command.openImageEditor.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nanoBanana.generateFromSelection",
          "when": "editorTextFocus",
          "group": "navigation@100"
        },
        {
          "command": "nanoBanana.editImageWithReference",
          "when": "resourceScheme == file && (resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg)",
          "group": "navigation@101"
        },
        {
          "command": "nanoBanana.openImageEditor",
          "when": "resourceScheme == file && (resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg)",
          "group": "navigation@102"
        }
      ],
      "editor/title/context": [
        {
          "command": "nanoBanana.editImageWithReference",
          "when": "resourceScheme == file && (resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg)",
          "group": "navigation@101"
        },
        {
          "command": "nanoBanana.openImageEditor",
          "when": "resourceScheme == file && (resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg)",
          "group": "navigation@102"
        }
      ],
      "explorer/context": [
        {
          "command": "nanoBanana.editImageWithReference",
          "when": "resourceScheme == file && (resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg)",
          "group": "navigation@101"
        },
        {
          "command": "nanoBanana.openImageEditor",
          "when": "resourceScheme == file && (resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg)",
          "group": "navigation@102"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "%config.title%",
      "properties": {
        "nanoBanana.modelId": {
          "type": "string",
          "enum": [
            "gemini-3-pro-image-preview",
            "gemini-2.5-flash-image"
          ],
          "default": "gemini-3-pro-image-preview",
          "description": "%config.modelId.description%"
        },
        "nanoBanana.geminiApiBaseUrl": {
          "type": "string",
          "default": "https://generativelanguage.googleapis.com/v1beta",
          "description": "%config.geminiApiBaseUrl.description%"
        },
        "nanoBanana.copilotPromptModel": {
          "type": "string",
          "default": "auto",
          "description": "%config.copilotPromptModel.description%"
        },
        "nanoBanana.imageOutputFormat": {
          "type": "string",
          "enum": [
            "png"
          ],
          "default": "png",
          "description": "%config.imageOutputFormat.description%"
        },
        "nanoBanana.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "%config.outputDirectory.description%"
        },
        "nanoBanana.imageSize": {
          "type": "string",
          "enum": [
            "1K",
            "2K",
            "4K"
          ],
          "default": "1K",
          "description": "%config.imageSize.description%"
        },
        "nanoBanana.defaultStyle": {
          "type": "string",
          "enum": [
            "infographic",
            "article-cover",
            "ad-dm",
            "social-post",
            "product-showcase",
            "ecommerce-banner",
            "business-presentation",
            "minimal-flat-illustration",
            "3d-render",
            "photorealistic",
            "watercolor",
            "tech-neon"
          ],
          "default": "article-cover",
          "description": "%config.defaultStyle.description%"
        },
        "nanoBanana.rememberLastStyle": {
          "type": "boolean",
          "default": true,
          "description": "%config.rememberLastStyle.description%"
        },
        "nanoBanana.defaultAspectRatio": {
          "type": "string",
          "enum": [
            "1:1",
            "2:3",
            "3:2",
            "3:4",
            "4:3",
            "4:5",
            "5:4",
            "9:16",
            "16:9",
            "21:9"
          ],
          "default": "1:1",
          "description": "%config.defaultAspectRatio.description%"
        },
        "nanoBanana.rememberLastAspectRatio": {
          "type": "boolean",
          "default": true,
          "description": "%config.rememberLastAspectRatio.description%"
        },
        "nanoBanana.displayLanguage": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "zh-TW",
            "zh-CN",
            "ja",
            "ko",
            "th",
            "vi"
          ],
          "default": "auto",
          "description": "%config.displayLanguage.description%"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "vscode:prepublish": "npm run build",
    "watch": "node esbuild.js --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "package:vsix": "npx @vscode/vsce package --baseImagesUrl https://vscode-nanobanana.gh.miniasp.com/",
    "publish:vscode": "pwsh -File scripts/publish-vscode.ps1"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.108.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
